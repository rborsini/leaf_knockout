@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>Index</h2>

<div class="btn-group" data-toggle="buttons">
    <label class="btn btn-primary">
        <input type="checkbox" class="search-toggle" autocomplete="off" > Photovoltaic
    </label>
    <label class="btn btn-primary">
        <input type="checkbox" class="search-toggle" autocomplete="off"> Hydroelectric
    </label>
</div>

<div id="knockout-container">
    <input type="button" name="wiew-toggle" id="wiew-toggle" value="Toggle Grid" />
    <input type="text" data-bind="value: searchField, valueUpdate: 'afterkeydown'" />
    <span data-bind="text: searchField"></span>
   <ul class="col-xs-9 col-xs-offset-2 padding-top-15 padding-left-20 " data-bind="template: { name: viewType, foreach: filteredElements }"></ul>
    @*components test*@
    @*<ul data-bind="foreach: plants">
        <grid-item params="value: $data"></grid-item>
    </ul>*@
</div>


<script type="text/html" id="list-item">
    <li>
        <a data-bind="attr: { href: link }">
            <span data-bind="text: Name"></span>
        </a>
        (<span class="text-danger" data-bind="text: Type"></span>)
    </li>
</script>

