
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>Index</h2>
<div id="knockout-container">
    <ul class="col-xs-9 col-xs-offset-2 padding-top-15 padding-left-20 ">
        <!-- ko foreach: plants -->
        <li>
            <a data-bind="attr: { href: link }" ><span data-bind="text: Name" ></span></a>
            (<span class="text-danger" data-bind="text: Type"></span>)
        </li>
        <!-- /ko -->
    </ul> 
</div>

@section scripts
{
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/overview")
}

@section ready
{
    var url='/api/monitorapi';
    overview.init(url, '#knockout-container');
}
